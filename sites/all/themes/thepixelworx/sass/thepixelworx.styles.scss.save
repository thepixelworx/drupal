/*-----------------------------------------------------------------------------------*/
/* Global Structure
/*-----------------------------------------------------------------------------------*/

/* Super Structure ***********************/


.l-region--navigation{display: none;} /* Temporarily Hides the Main menu */

html{
	height: 100%;
	margin: 0;
	min-width: 320px;
	padding: 0;
	position: relative;
	body {
		@extend html;
		left: 0;
		min-height: 100%;
		width: auto;
		}
}

.l-page{
	height: auto;
	margin-bottom: -300px;
	min-height: 100%;
	padding: 0;
	position: relative;
	width: 100%;

	.push{
		height: 300px;
		}
}


/* Branding ***********************/

.l-branding{
	position: absolute;
	}

